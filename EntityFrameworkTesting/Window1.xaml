<Window x:Class="EntityFrameworkTesting.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EntityFrameworkTesting"
        mc:Ignorable="d"
        Title="Añadir tarea" Height="274" Width="279">
    <Grid>
        <ComboBox x:Name="TaskComboBox" HorizontalAlignment="Center" Margin="0,65,0,0" VerticalAlignment="Top" Width="169"/>
        <TextBox x:Name="TaskText" Text="Tarea..." HorizontalAlignment="Center" Margin="0,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="169" Height="19"/>
        <Label Content="Añadir una nueva tarea" HorizontalAlignment="Left" Margin="31,10,0,0" VerticalAlignment="Top" Width="150"/>
        <Button x:Name="Add" Content="Añadir" HorizontalAlignment="Left" Height="35" Margin="34,174,0,0" VerticalAlignment="Top" Width="96" Click="Add_Click"/>
        <Button x:Name="Cancel" Content="Cancelar" HorizontalAlignment="Left" Height="35" Margin="140,174,0,0" VerticalAlignment="Top" Width="96" Click="Cancel_Click"/>
        <TextBox x:Name="TaskContent" HorizontalAlignment="Center"  Height="59"  Margin="0,92,0,0" Text="Contenido..." TextWrapping="Wrap" VerticalAlignment="Top" Width="169" />

    </Grid>


</Window>
